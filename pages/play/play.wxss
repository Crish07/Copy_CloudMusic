page {
  width: 100%;
  height: 100%;
}

.play {
  width: 100%;
  height: 100%;
  background: #212121;
  display: flex;
  flex-direction: column;
  align-items: center;  
}

/* 专辑图片 */
.play-music {
  width: 450rpx;
  height: 450rpx;
  border-radius: 50%;
  background: rgba(0,0,0,.6);
  margin-top: 200rpx; 
  display: flex;
  justify-content: center;
  align-items: center;
}
.music {
  width: 350rpx;
  height: 350rpx;
  border-radius: 50%;
  overflow: hidden;
  /* animation: rotate 10s linear infinite forwards; */
}
@keyframes rotate{
  0%{
    transform: rotate(0deg)
  }100%{
    transform: rotate(360deg)
  }
}
.music image {
  width: 100%;
  height: 100%;
}

/* 歌名及歌手 */
.play-text {
  margin-top: 20px;
  color: white;
  font-size: 16px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.play-text view {
  margin: 2px 0;
}
/* 歌词 */
.lyric-content {
  margin-top: 20px;
  height:900rpx; 
  overflow-y: scroll;
}
.lyric {
  overflow-y: scroll;
  color: white;
  font-size: 16px;
}
 .lyric view {
  padding: 5px 50px; 
  text-align: center;
} 

/* 播放控制 */
.play-control {
  width: 100%;
  padding: 10px 0;
  background: #0D0D0D;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;  
  align-items: center;
  align-content: center;
}

.act-toggle {
  margin: 0 60px;
  display: flex;
  justify-content: center;
}
.act-toggle image {
  width: 90rpx;
  height: 90rpx;
}

 .play-control>image {
  width: 80rpx;
  height: 80rpx;
}
